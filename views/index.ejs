<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="style/style.css" />
    <script src="js/script.js" defer></script>
    <title>Task List 2023</title>
  </head>
  <body>
    <header>
      <h1>Task List 2023</h1>
      <form id="new-task-form" action="/posts" method="post">
        <input
          type="text"
          id="new-task-input"
          name="content"
          placeholder="what do you haved planned ?"
          required
        />
        <input type="submit" id="new-task-submit" value="Add Task" />
      </form>
    </header>

    <main>
      <section class="task-list">
        <h2>Tasks</h2>

        <div id="tasks">
          <% posts.forEach((post, index) => { %>
          <div class="task">
            <div class="content">
              <input
                type="text"
                class="text"
                value="<%= post.content %>"
                readonly
              />
            </div>
            <div class="actions">
              <button class="edit" onclick=<% index %>>Edit</button>
              <a href="/delete-post/<%= index %>" class="delete">Delete</a>
            </div>
          </div>
          <% }) %>
        </div>
      </section>
    </main>
  </body>
</html>
